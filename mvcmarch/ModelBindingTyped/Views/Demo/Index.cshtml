@model ModelBindingTyped.Models.Candidate

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>

    @using (Html.BeginForm("store", "Demo", FormMethod.Post))
    {

        <table align="center" border="1">
            <tr>
                <td>Name</td>
                <td>@Html.TextBoxFor(c => c.name)</td>
            </tr>
            <tr>
                <td>Password</td>
                <td>@Html.PasswordFor(c => c.password)</td>
            </tr>
            <tr>
                <td>Gender</td>
                <td>@Html.RadioButtonFor(c => c.gender, "r1", "male") Male &nbsp; @Html.RadioButtonFor(c => c.gender, "r1", "female") Female</td>
            </tr>
            <tr>
                <td>Country</td>
                <td>@Html.DropDownListFor(c => c.country, new SelectList(ViewBag.country, "text", "value"), "-Select Country-")</td>
            </tr>
            <tr>
                <td>Email</td>
                <td>@Html.EditorFor(c => c.email)</td>
            </tr>
            <tr>
                <td>Skills</td>
                <td>@Html.ListBoxFor(c => c.skills, new SelectList(ViewBag.skills))</td>
            </tr>

            <tr>
                <td>DOB</td>
                <td>@Html.EditorFor(c => c.dob)</td>
            </tr>

            <tr>
                <td>Mobile</td>
                <td>@Html.EditorFor(c => c.mobile)</td>
            </tr>

            <tr>
                <td colspan="2">
                    <input type="submit" value="Save" />
                </td>
            </tr>

        </table>

    }

</body>
</html>
