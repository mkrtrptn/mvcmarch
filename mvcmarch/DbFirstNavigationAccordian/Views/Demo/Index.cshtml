@model  IEnumerable<DbFirstNavigationAccordian.Models.category>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <script src="~/Scripts/jquery-3.0.0.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div id="div1">
        @foreach (var i in Model)
        {

            <h2 class="text-black-50 accordion">
                @i.cateid &nbsp; @i.catedesc
            </h2>
            <div>
                <table class="table table-info">
                    <tr>
                        <td>Product Id</td>
                        <td>Product Desc</td>
                        <td>Price</td>
                        <td>Category</td>
                    </tr>
                    @foreach (var p in i.products)
                    {
                        <tr>
                            <td>@p.prodid</td>
                            <td>@p.proddesc</td>
                            <td>@p.prodprice</td>
                            <td>@p.cateid</td>
                        </tr>
                    }


                </table>
            </div>
        }
    </div>
    <script>

        $(function () {
            $("#div1").accordion({ collapsible: true });
        });
    </script>
</body>
</html>
