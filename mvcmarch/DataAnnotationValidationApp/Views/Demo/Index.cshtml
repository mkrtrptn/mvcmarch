@model DataAnnotationValidationApp.Models.UserModel
  
@{
  Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <link href="~/Content/themes/base/all.css" rel="stylesheet" />
</head>
<body>
    @using (Html.BeginForm("store", "Demo", FormMethod.Post))
    {
        <div>
            <table class="table table-striped table-dark"  style="width:50%">
                
                <tr>
                    <td>Username</td>
                    <td>@Html.TextBoxFor(u => u.uname)</td>
                    <td>@Html.ValidationMessageFor(u=>u.uname)</td>
                </tr>
                <tr>
                    <td>Password</td>
                    <td>@Html.EditorFor(u => u.password)</td>
                    <td>@Html.ValidationMessageFor(u=>u.password)</td>
                </tr>
                <tr>
                    <td>Compare Password</td>
                    <td>@Html.EditorFor(u => u.cpassword)</td>
                    <td>@Html.ValidationMessageFor(u=>u.cpassword)</td>
                </tr>
                <tr>
                    <td>Address</td>
                    <td>@Html.EditorFor(u => u.address)</td>
                    <td>@Html.ValidationMessageFor(u=>u.address)</td>
                </tr>
                <tr>
                    <td>Age</td>
                    <td>@Html.TextBoxFor(u => u.age)</td>
                    <td>@Html.ValidationMessageFor(u=>u.age)</td>
                </tr>
                <tr>
                    <td>Mobile</td>
                    <td>@Html.TextBoxFor(u => u.mobile)</td>
                    <td>@Html.ValidationMessageFor(u=>u.mobile)</td>
                </tr>
                <tr>
                    <td>Dob</td>
                    <td>@Html.EditorFor(u => u.dob)</td>
                    <td>@Html.ValidationMessageFor(u=>u.dob)</td>
                </tr>

                <tr>
                    <td>Email</td>
                    <td>@Html.EditorFor(u => u.email)</td>
                    <td>@Html.ValidationMessageFor(u=>u.email)</td>
                </tr>

                <tr>
                    <td>Passcode</td>
                    <td>@Html.EditorFor(u=>u.passcode)</td>
                    <td>@Html.ValidationMessageFor(u=>u.passcode)</td>
                </tr>
                <tr>
                    <td colspan="2">
                        <input type="submit" class="btn btn-success"/>
                    </td>
                </tr>

            </table>
        </div>
    }

    <script>
        $(function ()
        {
            $("#dob").datepicker({ dateFormat:"dd/mm/yy"})
        });
    </script>



</body>
</html>
